<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888" >

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_x="0dp"
        android:layout_y="-2dp" />

    <requestFocus
        android:layout_above="@+id/drawmap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/drawmap"
        android:src="@drawable/large_location_icon"
        android:layout_above="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="    描繪軌跡"
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/drawmap"
        android:layout_alignStart="@+id/drawmap"
        android:layout_alignRight="@+id/drawmap"
        android:layout_alignEnd="@+id/drawmap"
        />

</RelativeLayout>