<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d4f1ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="1"
            android:background="#29a7e1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/imageView"
                android:src="@drawable/ic_bluetooth_black_24dp"
                android:layout_weight="0.05"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="藍芽連線設定"
                android:id="@+id/textView17"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="藍芽連線"
                android:id="@+id/textView18"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black" />

            <Switch
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/switch_BTConnect"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="連線狀態"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/btconnectstatue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:text="未連線"
                android:textSize="18dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="連線裝置"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Device|Mac Address"
                android:id="@+id/txt_btConnectDevice"
                android:textSize="18dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="接收/傳送"
                android:id="@+id/textView20"
                android:textColor="@android:color/black"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.000 KB / 0.000 KB"
                android:id="@+id/txt_btRSbyte"
                android:layout_marginRight="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="1"
            android:background="#29a7e1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_cloud_upload_black_24dp"
                android:layout_weight="0.05"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="伺服器連線設定"
                android:id="@+id/textView30"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="伺服器連線"
                android:id="@+id/textView31"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black" />

            <Switch
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/switch_StationConnect"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="連線狀態"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/txt_stationConnectStatue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:text="未連線至主站"
                android:textSize="18dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="伺服器位址"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="IP:Port"
                android:id="@+id/txt_ConnectStationAddr"
                android:textSize="18dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="接收/傳送"
                android:id="@+id/textView36"
                android:textColor="@android:color/black"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0.000 KB / 0.000 KB"
                android:id="@+id/txt_ConnectStationRSbyte"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="1"
            android:background="#29a7e1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_gps_fixed_black_24dp"
                android:layout_weight="0.05"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="手機內建GPS設定"
                android:id="@+id/textView22"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="手機內建GPS"
                android:id="@+id/textView23"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center" />

            <Switch
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/switch_buildinGPS"
                android:enabled="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="連線狀態"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/txt_BuildinGPSStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:text="未開啟"
                android:textSize="18dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="RTCM Decode"
                android:textSize="18dp"
                android:id="@+id/btn_rtcmdecode"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:visibility="gone">

        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="藍芽連線"
            android:id="@+id/btbtn"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="連接主站"
            android:id="@+id/consta"
            android:textSize="18dp"
            android:enabled="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:text="主站連線狀態:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txt_stationConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主站回傳資料"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/stationsituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:visibility="gone">

        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="內建GPS"
            android:id="@+id/btn_built_in_gps"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

    </LinearLayout>

</LinearLayout>